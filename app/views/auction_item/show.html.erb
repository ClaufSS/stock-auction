
<section>
  <div>
    <div>
      <h3><%= @item.name %></h3>
    </div>

    <div>
      <%= format_dimension(@item) %>
    </div>

    <div>
      <p>Peso (g): <%= @item.weight %></p>
    </div>

    <div>
      <p>Descrição: <%= @item.description %></p>
    </div>

    <div>
      <%= image_tag @item.photo %>
    </div>
  </div>
</section>
