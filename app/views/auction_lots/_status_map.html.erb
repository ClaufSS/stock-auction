
<div>
  <p>Status: <%= t(".#{@lot.status}") %></p>

  <% if @lot.pending? && !@lot.expired? %>
    <% if @lot.creator_user != current_user %>
      <%= button_to 'Aprovar Lote', approve_auction_lot_path(@lot) %>
    <% end %>
  <% end %>

  <% if @lot.expired? && !@lot.canceled? && !@lot.closed? %>
    <% if @lot.winner_bidder %>
      <%= button_to 'Encerrar Lote', close_auction_lot_path(@lot) %>
    <% else %>
      <%= button_to 'Cancelar Lote', cancel_auction_lot_path(@lot) %>
    <% end %>
  <% end %>
</div>
